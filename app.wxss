/**app.wxss**/
.white{
  background: white;
}

.common-color{
  color: #9c855c;
}
/*公共按钮 */
.common-bottom{
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #9c855c; 
  color: white;
}

.common-bottom navigator{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 公共input  */
 .information-input-list{
  padding: 0 30rpx;

}
.information-input-item{
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #e9e9e9;
  font-size: 11pt;
  color: #696969;
}
.information-input-name{
  width: 180rpx;
} 
.information-input-input input{
  color: #A9A9A9
}

/*弹框  */
.toast_content_box { 
 display: flex; 
 width: 100%; 
 height: 40%; 
 justify-content: center; 
 align-items: center; 
 position: fixed; 
 z-index: 999; 
} 
.toast_content { 
 width: 50%; 
 padding: 20rpx; 
 background: rgba(0, 0, 0, 0.5); 
 border-radius: 20rpx; 
} 
.toast_content_text { 
 height: 100%; 
 width: 100%; 
 color: #fff; 
 font-size: 28rpx; 
 text-align: center; 
} 

/* 分类弹框  */
.classify-box{
  background-color: white;
  position: fixed;
  width: 500rpx;
  height: 100%;
  right: 0;
  top: 0;
  z-index: 20000;
}
.classify-header{
  height: 100rpx;
  background: #e7e7e7;
  width: 100%;
  padding: 0 0  0 30rpx;
  display: flex;
  align-items: center;
}
.classify-list{
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.classify-item{
  background-color: #e9e9e9;
  font-size: 10pt;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin: 10rpx;
}