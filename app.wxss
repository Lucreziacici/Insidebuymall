/**app.wxss**/
.white{
  background: white;
}

.common-color{
  color: #9c855c;
}
/*公共按钮 */
.common-bottom{
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #9c855c; 
  color: white;
}

.common-bottom navigator{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 公共input  */
 .information-input-list{
  padding: 0 30rpx;

}
.information-input-item{
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #e9e9e9;
  font-size: 11pt;
  color: #696969;
}
.information-input-name{
  width: 180rpx;
} 
.information-input-input input{
  color: #A9A9A9
}


/* 分类弹框  */
.classify-box{
  background-color: white;
  position: fixed;
  width: 500rpx;
  height: 100%;
  right: 0;
  top: 0;
  z-index: 20000;
}
.classify-header{
  height: 100rpx;
  background: #e7e7e7;
  width: 100%;
  padding: 0 0  0 30rpx;
  display: flex;
  align-items: center;
}
.classify-list{
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.classify-item{
  background-color: #e9e9e9;
  font-size: 10pt;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin: 10rpx;
}
/*订单项  */

.order-item {
  padding: 20rpx;
  margin: 10rpx 0 0 0;
}

.order-item-header navigator {
  padding: 0 0 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 10pt;
  border-bottom: 1px solid #eee;
}

.order-item-header navigator image {
  width: 12rpx;
  height: 20rpx;
  margin: 0 0 0 10rpx;
}

.order-status {
  color: #9c855c;
  font-size: 11pt;
}

.order-orderid {
  color: #aaa;
}

.order-item-message {
  border-bottom: 1px solid #eee;
}

.order-item-message navigator {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}

.order-product-image image {
  width: 200rpx;
  height: 220rpx;
}

.order-product-message {
  width: 400rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.order-product-message view:nth-child(1) {
  color: #051b28;
  font-size: 10pt;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 72rpx;
  overflow: hidden;
}

.order-product-message view:nth-child(2) {
  color: #666;
  font-size: 10pt;
}

.order-product-message view:nth-child(3) {
  color: #9c855c;
}

.order-product-num {
  font-size: 10pt;
}

.order-price {
  font-size: 10pt;
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.order-price text {
  font-size: 12pt;
}

.order-item-footer {
  display: flex;
  justify-content: flex-end;
  padding: 30rpx 0 0 0;
}

.order-item-footer text {
  font-size: 10pt;
  border: 1px solid #aaa;
  border-radius: 10rpx;
  padding: 10rpx 30rpx;
  margin: 0 0 0 10rpx;
}