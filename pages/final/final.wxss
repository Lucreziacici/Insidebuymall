page {
  background-color: #e7e7e7;
}

.view_top {
  width: 750rpx;
  background: white;
}

.view_top_img {
  width: 750rpx;
  height: 12rpx;
  display: block;
}

.choose-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}

.choose-item-left, .choose-item-right {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 10%;
}

.choose-item-left image {
  width: 24rpx;
  height: 32rpx;
}

.choose-item-right image {
  width: 16rpx;
  height: 24rpx;
}

.choose-item-center {
  width: 80%;
  font-size: 11pt;
}

.choose-item-center-top {
  display: flex;
  justify-content: space-between;
}

.choose-item-center-bottom {
  margin: 10rpx 0 0 0;
}

.choose-item-right {
  display: flex;
  align-items: center;
}

.orderdetail {
  padding: 0 0 100rpx 0;
}

.order-message-item {
  border-bottom: 1px solid #e7e7e7;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 10pt;
  height: 45rpx;
}

.body-bottom {
  position: fixed;
  height: 100rpx;
  background: white;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 12pt;
}

.bottom-1 {
  width: 60%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-2 {
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #9c855c;
  color: white;
}

.bottom-text1 {
  color: #4a4a4a;
}

.bottom-text2 {
  color: #9a8c65;
}
