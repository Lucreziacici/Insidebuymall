/* pages/orderList/orderList.wxss */

page {
  background-color: #eee;
}


.header-tab {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 10pt;
  border-bottom: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1;
}

.header-tab view{
 padding: 20rpx 0;
}
.tab-active {
  color: #9c855c;
  border-bottom: 2px #9c855c solid;
 
}

.order-list {
  margin: 100rpx 0 0 0;
  width: 750rpx;
}

.order-item {
  padding: 20rpx;
  margin: 20rpx 0 0 0;
}

.order-item-header navigator {
  padding: 0 0 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 10pt;
  border-bottom: 1px solid #eee;
}

.order-item-header navigator image {
  width: 12rpx;
  height: 20rpx;
  margin: 0 0 0 10rpx;
}

.order-status {
  color: #9c855c;
  font-size: 11pt;
}

.order-orderid {
  color: #aaa;
}

.order-item-message {
  border-bottom: 1px solid #eee;
}

.order-item-message navigator {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}

.order-product-image image {
  width: 200rpx;
  height: 220rpx;
}

.order-product-message {
  width: 400rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.order-product-message view:nth-child(1) {
  color: #051b28;
  font-size: 10pt;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 72rpx;
  overflow: hidden;
}

.order-product-message view:nth-child(2) {
  color: #666;
  font-size: 10pt;
}

.order-product-message view:nth-child(3) {
  color: red;
}

.order-product-num {
  font-size: 10pt;
}

.order-price {
  font-size: 10pt;
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.order-price text {
  font-size: 12pt;
}

.order-item-footer {
  display: flex;
  justify-content: flex-end;
  padding: 30rpx 0 0 0;
}

.order-item-footer text {
  font-size: 10pt;
  border: 1px solid #aaa;
  border-radius: 10rpx;
  padding: 10rpx 30rpx;
  margin: 0 0 0 10rpx;
}
.orderdetail-footer{
  border-top:1px solid #e7e7e7;
}
