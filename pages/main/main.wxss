/**index.wxss**/

page {
  background-color: #f9f9f9;
}

.swiper {
  width: 750rpx;
  height: 824rpx;
}

.slide-image {
  width: 750rpx;
  height: 824rpx;
}

.swiper .wx-swiper-dot {
  display: inline-flex;
  height: 21rpx;
  width: 21rpx;
  margin-left: 20rpx;
  justify-content: space-between;
  background-color: #eff5f5;
}

.swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #eff5f5;
  border-radius: 100rpx;
}

.swiper .wx-swiper-dot-active {
  border-radius: 30rpx;
  width: 40rpx;
}

.swiper .wx-swiper-dot-active::before {
  background: #fa4686;
}

.navigation {
  display: flex;
  width: 750rpx;
  padding: 20rpx 0;
  justify-content: space-around;
  background-color: #fff;
}

.navigation-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.navigation image {
  width: 92rpx;
  height: 92rpx;
}

.navigation text {
  font-size: 26rpx;
  margin: 20rpx 0 0 0;
  color: #181717;
}

.special {
  width: 750rpx;
}

.special-title {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  height: 74rpx;
  margin: 20rpx 0;
}

.special-line {
  width: 70rpx;
  height: 2rpx;
  margin: 0 28rpx;
  background-color: #d1d1d1;
}

.special-title text {
  font-size: 13pt;
  font-weight: bold;
}

.special-img image {
  width: 750rpx;
  height: 280rpx;
}

.special-master-item {
  width: 750rpx;
  background-color: white;
}

.special-master-item .special-navigation {
  margin: 20rpx 16rpx;
}

.special-master-img {
  display: flex;
}

.special-master-img image {
  width: 212rpx;
  height: 200rpx;
}

.special-box {
  display: flex;
  justify-content: space-between;
  width: 750rpx;
}

.list_list {
  height: 600rpx;
  width: 750rpx;
}

.list {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.list_item {
  width: 370rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list_item_img {
  width: 370rpx;
  height: 432rpx;
}

.list_item_title {
  font-size: 40rpx;
}

.list_item_des {
  font-size: 36rpx;
}

.list_item_price {
  font-size: 30rpx;
  color: red;
}

.logo-font {
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-font image {
  width: 212rpx;
  height: 202rpx;
}
