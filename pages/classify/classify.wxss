/* pages/classify/classify.wxss */
page{
  border-top: 1px solid #efefef;
}
.classify{
  display: flex;
  justify-content: space-around;
  height:99%;
  position:absolute;

}
.classifyList{
  width: 200rpx;
  padding: 40rpx 18rpx 0;
  border-right: 1px solid #efefef;
}
.classifyItem{
padding:12rpx 20rpx;
margin:20rpx 0 0 0;
border-radius:100rpx;
display:flex;
justify-content:center;
align-items:center;

}
.active{
  background-color: #000;
}
.classifyItem text{
  color: #333;
  font-size: 10pt;
}
.active text{
  color: #fff;
}

.classifyBox{
  /* width: 550rpx; */
  padding: 20rpx 30rpx;
}
.classifyBoxTitle{
  margin: 20rpx 0 0 30rpx;
  font-size: 10pt;
  color: #404040;
  font-weight: bolder;
}
.classifyBoxList{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.classifyBoxItem{
  margin: 20rpx 0 0 0;
}
.classifyBoxItem navigator{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.classifyBoxItem navigator image{
  width: 100rpx;
  height: 100rpx;
}
.classifyBoxItem navigator text{
  font-size: 8pt;
  margin: 20rpx 0 0 0;
  color: #2f2f2f;
}