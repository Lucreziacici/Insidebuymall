/* pages/commodityList/commodityLists.wxss */

page {
  background: #f9f9f9;
}

.header {
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 50rpx;
  position: fixed;
  top: 0;
  width: 650rpx;
   z-index: 1; 
}

.search_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 10pt;
  flex-grow: 1;
  border: 2rpx solid #eee;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  background: #f1f1f1;
}

.search_box view {
  flex-grow: 1;
  color: #ababab;
}

.search_box image {
  width: 30rpx;
  height: 30rpx;
}

.navigation {
  width: 40rpx;
  height: 40rpx;
  margin: 0 0 0 20rpx;
}

.commodity_list {
  margin: 100rpx 0 0 0;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}

